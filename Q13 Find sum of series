#include <stdio.h>

int main() {
    float sum=0.0;
    int n;
    int fac=1;
    printf("Enter the value of n ");
    scanf("%d",&n);
    for(int i=1;i<=n;++i)
    {
       for(int j=i;j>=1;--j)
       fac=fac*j;
       sum=sum+fac;
       fac=1;
    }
    printf("The sum is:%f",sum);
    return 0;
}
