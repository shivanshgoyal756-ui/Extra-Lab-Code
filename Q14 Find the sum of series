#include <stdio.h>
#include <math.h>

int main() {
    float sum=1.0;
    int n;
    int fac=1;
    int x;
    printf("Enter the vlaue of x");
    scanf("%d",&x);
    printf("Enter the value of n ");
    scanf("%d",&n);
    for(int i=1;i<=n;++i)
    {
       for(int j=i;j>=1;--j)
       
       { fac=fac*j;
       }sum=sum+pow(x,i)/fac;
       fac=1;
    }
    printf("The sum is:%f",sum);
    return 0;
}
