
#include <stdio.h>

int main() {
    float sum=0.0;
    int n;
    printf("Enter the value of n ");
    scanf("%d",&n);
    for(int i=1;i<=n;++i)
    {
       if(i%2!=0)
        sum=sum+(1.0/(float)i);
        else
        sum=sum-(1.0/(float)i);
        
    }
    printf("The sum is:%f",sum);
    return 0;
}
